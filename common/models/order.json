{
  "name": "Order",
  "plural": "Orders",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "total": {
      "type": "number",
      "required": true
    },
    "balance": {
      "type": "number",
      "required": true
    },
    "status": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "payments": {
      "type": [
        "object"
      ]
    },
    "dateOrder": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "artwork": {
      "type": "hasMany",
      "model": "Artwork",
      "foreignKey": "orderId"
    },
    "addresses": {
      "type": "hasOne",
      "model": "Address",
      "foreignKey": "addressId"
    },
    "lease-option": {
      "type": "embedsOne",
      "model": "lease-option",
      "property": "lease-option",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "shipping": {
      "type": "embedsOne",
      "model": "shipping",
      "property": "shipping",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "customerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
